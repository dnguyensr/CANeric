 <div class='container'>

   <h2> <div>Project Name: <%= @project.name  %></div> </h2>
   <div>Project Organization: <%= @project.organization.name %></div>
   <div>Located at <%= @project.location %></div>
   <div>From <%= @project.begin_date %> to <%= @project.end_date %><div><br>
   <h3> <div>Details</div></h3>
   <div><%= @project.details %></div>
   <div>Goal: $<%= @project.cost %></div>
   <% if current_user == @project.organizer %>
   <div>
   <form action="/projects/<%= @project.id %>" method="GET">
   <input class="myButton" type="submit" value="Edit Project">
   </form>
   </div>
    <div>
   <form action="/projects/<%= @project.id %>" method="POST">
   <input type="hidden" name="_method" value="delete">
   <input class="myButton" type="submit" value="Remove Project">
   </form>
   </div>
   <% end %>
   <h3> Donate today! </h3>
   <div>
   <%=erb :'stripe/_charge'  %>
   </div>
 </div>
