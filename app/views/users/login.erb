<div >
  <div class = "errors">
    <% if @errors %>
      <% @errors.each do |msg| %>
      <%= msg %>
      <% end %>
    <% end %>
  </div>
  <h1>Login Today</h1>
    <form action="/users/login" method="POST">
      <label>Email:</label>
      <input type="text" name="user[email]"><br>
      <label>Password:</label>
      <input type="password" name="user[password]"><br>
      <input class="myButton" type="submit" value="Create Account">
    </form>
  </div>

</div>
